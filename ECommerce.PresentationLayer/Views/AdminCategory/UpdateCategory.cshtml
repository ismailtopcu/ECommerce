@model UpdateCategoryDto
@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card-title">
    <h4>Kategori Güncelleme Sayfası</h4>
</div>
<div class="card-body">
    <div class="form-validation">
        <form class="form-valide" method="post">
            <div class="form-group row">
                <input type="hidden" asp-for="Id"/>
                <label class="col-lg-4 col-form-label" for="val-email">
                    Kategori Adı <span class="text-danger">*</span>
                </label>
                <div class="col-lg-6">
                    <input type="text" class="form-control" asp-for="Name" placeholder="Kategori adı giriniz..">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-lg-4 col-form-label" for="val-currency">
                    Açıklama <span class="text-danger">*</span>
                </label>
                <div class="col-lg-6">
                    <input type="text" class="form-control" asp-for="Description" placeholder="Kategori açıklaması giriniz..">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-lg-4 col-form-label" for="val-currency">
                    Kategori Fotoğrafı <span class="text-danger">*</span>
                </label>
                <div class="col-lg-6">
                    <input type="text" class="form-control" asp-for="ImageUrl" placeholder="Kategori için görsel url giriniz..">
                </div>
            </div>

            <div class="form-group row">
                <label class="col-lg-4 col-form-label" for="val-currency">
                    Üst Kategori <span class="text-danger">*</span>
                </label>
                <div class="col-lg-6">
                    <input type="text" class="form-control" asp-for="ParentCategoryId" placeholder="Üst kategori id giriniz..">
                </div>
            </div>
            <div class="form-group row">
                <div class="col-lg-8 ml-auto">
                    <button class="btn btn-primary">Kaydet</button>
                </div>
            </div>
        </form>
    </div>
</div>


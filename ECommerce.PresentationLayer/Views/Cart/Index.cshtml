@model ECommerce.DtoLayer.Dtos.BasketDto.BasketDto
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">

<body class="animsition">

	<div class="container">
		<div class="bread-crumb flex-w p-l-25 p-r-15 p-t-30 p-lr-0-lg">
			<a href="/" class="stext-109 cl8 hov-cl1 trans-04">
				Ana Sayfa
				<i class="fa fa-angle-right m-l-9 m-r-10" aria-hidden="true"></i>
			</a>

			<span class="stext-109 cl4">
				Sepetiniz
			</span>
		</div>
	</div>


	<!-- Shoping Cart -->
	<form class="bg0 p-t-75 p-b-85">
		<div class="container">
			<div class="row">
				<div class="col-lg-10 col-xl-7 m-lr-auto m-b-50">
					<div class="m-l-25 m-r--38 m-lr-0-xl">
						<div class="wrap-table-shopping-cart">
							<table class="table-shopping-cart">
								<tr class="table_head">
									<th class="column-1">Ürün</th>
									<th class="column-2"></th>
									<th class="column-3">Fiyat</th>
									<th class="column-4">Adet</th>
									<th class="column-5">Toplam</th>

								</tr>

								@if (Model.BasketItems != null && Model.BasketItems.Count > 0)
								{
									@foreach (var item in Model.BasketItems)
									{
										<tr class="table_row">
											<td class="column-1">
												<a href="/Cart/RemoveToCart/@item.Product.Id">
													<div class="how-itemcart1 product-image" data-product-id="@item.Product.Id">
														<img src="@item.Product.Image" alt="IMG">
													</div>
												</a>
											</td>
											<td class="column-2">@item.Product.Name</td>
											<td class="column-3">$ @item.Product.Price</td>
											<td class="column-4">@item.Quantity</td>
											<td class="column-5">$ @(item.Product.Price * item.Quantity)</td>
										</tr>

									}
								}
								else
								{
									<tr>
										<td class="text-center" colspan="5">Sepetiniz boş.</td>
									</tr>
								}
							</table>
						</div>

					</div>
				</div>

				<div class="col-sm-10 col-lg-7 col-xl-5 m-lr-auto m-b-50">
					<div class="bor10 p-lr-40 p-t-30 p-b-40 m-l-63 m-r-40 m-lr-0-xl p-lr-15-sm">
						<h4 class="mtext-109 cl2 p-b-30">
							Sepet Toplamı
						</h4>



						<div class="flex-w flex-t p-t-27 p-b-33">
							<div class="size-208">
								<span class="mtext-101 cl2">
									Toplam:
								</span>
							</div>

							<div class="size-209 p-t-1">
								<span class="mtext-110 cl2">
									$@Model.TotalPrice
								</span>
							</div>
						</div>

						<button class="flex-c-m stext-101 cl0 size-116 bg3 bor14 hov-btn3 p-lr-15 trans-04 pointer">
							SİPARİŞ OLUŞTUR
						</button>
					</div>
				</div>
			</div>
		</div>
	</form>




	<!-- Footer -->
	<!-- Back to top -->
	<div class="btn-back-to-top" id="myBtn">
		<span class="symbol-btn-back-to-top">
			<i class="zmdi zmdi-chevron-up"></i>
		</span>
	</div>


	<!--===============================================================================================-->


</body>
</html>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
	$(document).ready(function () {
		// Tüm ürün resimlerine tıklama olayı ekleyin
		$(".product-image").click(function () {
			// Tıklanan ürünün product ID'sini alın
			var productId = $(this).data("productId");

			// Alınan product ID'sini bir Controller Action'a gönderin
			sendProductIdToController(productId);
		});
	});

	function sendProductIdToController(productId) {
		// Ürün ID'sini bir Controller Action'a göndermek için AJAX kullanabilirsiniz
		$.ajax({
			url: '/Cart/RemoveToCart', // Hedef Controller ve Action'ın adını buraya ekleyin
			type: 'Get', // GET veya POST kullanabilirsiniz
			data: { productId: productId }, // Controller'a gönderilecek veri
			success: function (result) {
				// Başarılı bir şekilde gönderildiğinde yapılacak işlemler
			},
			error: function () {
				// Hata durumunda yapılacak işlemler
			}
		});
	}
</script>

